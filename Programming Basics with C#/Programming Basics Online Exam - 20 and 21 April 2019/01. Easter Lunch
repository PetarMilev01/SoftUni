using System;

public class Program
{
    static void Main()
    {
        int easterBread = int.Parse(Console.ReadLine());
        int eggs = int.Parse(Console.ReadLine());
        int cookies = int.Parse(Console.ReadLine());

        double easterBreadPrice = easterBread * 3.20;
        double eggsPrice = eggs * 4.35;
        double cookiesPrice = cookies * 5.4;
        double eggsPaintPrice = eggs * 12 * 0.15;

        double totalPrice = easterBreadPrice + eggsPrice + cookiesPrice + eggsPaintPrice;
        Console.WriteLine($"{totalPrice:0.00}");
    }
}
